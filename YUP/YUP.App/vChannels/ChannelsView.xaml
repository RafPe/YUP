<UserControl x:Class="YUP.App.vChannels.ChannelsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YUP.App.vChannels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <StackPanel x:Name="topcontrols"
                        Orientation="Horizontal"
                        Grid.Row="0"
                        Margin="5">
                <Button Height="30"
                        Width="150"
                        Content="{Binding testos}"
                        Command="{Binding klikos}">                     
                </Button>
                <TextBox Height="30" 
                         Width="130"
                         Margin="5" Text="{Binding testos2, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            </StackPanel>


        
        <ListView Grid.Row="1"
                  Height="200"
                  Margin="0, 10, 0, 0"
                  BorderThickness="0"
                  ItemsSource="{Binding YtChannels}"
                  SelectedIndex="0"
                  SelectedItem="{Binding SelectedYtChannel}"
                  Style="{StaticResource VirtualisedMetroListView}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding channelId}" FontWeight="Bold" />
                        <TextBlock Text="{Binding channelFriendlyName}" FontWeight="Bold" />
                        <Button Content="Remove" Command="{Binding DataContext.cmdRemoveChannel,RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"></Button>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <!--<ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding channelId}" Header="Channel ID" />
                    <GridViewColumn DisplayMemberBinding="{Binding channelFriendlyName}" Header="Channel name" />
                </GridView>
            </ListView.View>-->
        </ListView>


    </Grid>
</UserControl>
