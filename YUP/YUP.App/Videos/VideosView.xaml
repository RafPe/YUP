<UserControl x:Class="YUP.App.Videos.VideosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             local:CustomBehaviors.LoadedMethodName="LoadData"
             xmlns:local="clr-namespace:YUP.App"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Nasza wyszukiwarka filmikow-->
        <GroupBox Header="Filter" Grid.Row="0" x:Name="Filter">
            <StackPanel Orientation="Vertical">
                <TextBox Name="tbxFilterPoradnikiOnline" 
                                 Margin="10"                                 
                                 controls:TextBoxHelper.Watermark="{DynamicResource TextBox_WaterMark_SearchTutorial}"
                                 controls:TextBoxHelper.IsWaitingForData="True"
                                 ToolTip="{DynamicResource TextBox_ToolTip_Tutorial}"/>
            </StackPanel>
        </GroupBox>
        
        <GroupBox x:Name="Videos" 
                  Grid.Row="1"
                  Header="Videos"
                  Margin="5"
                  >
            
        </GroupBox>
    </Grid>
</UserControl>
