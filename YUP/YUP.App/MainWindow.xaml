<Controls:MetroWindow 
        x:Class="YUP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YUP.App"
        xmlns:channels="clr-namespace:YUP.App.vChannels"
        mc:Ignorable="d"
        Title="YUP - Youtube Universal Player"
        Width="1020"
        Height="720"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:videos="clr-namespace:YUP.App.vVideos"
        xmlns:yupis="clr-namespace:YUP.App.vYupis"
        xmlns:player="clr-namespace:YUP.App.vPlayer"
        ResizeMode="CanResize"
        GlowBrush="{DynamicResource AccentColorBrush}"
        WindowStartupLocation="CenterScreen"
        >
    
    <Window.DataContext>
        <local:MainWindowViewModel></local:MainWindowViewModel>
    </Window.DataContext>
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type videos:VideosViewModel}">
            <videos:VideosView/> 
         </DataTemplate>
        <DataTemplate DataType="{x:Type yupis:YupisViewModel}">
            <yupis:YupisView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type player:PlayerViewModel}">
            <player:PlayerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type channels:ChannelsViewModel}">
            <channels:ChannelsView/>
        </DataTemplate>


    </Window.Resources>
    
    <Grid x:Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StatusBar Grid.Row="1"
                   Grid.ColumnSpan="3"
                   >
            <StatusBarItem>YUP Connectivity mode</StatusBarItem>
            <Separator Style="{StaticResource MetroStatusBarSeparator}" />
            <StatusBarItem>Mode :</StatusBarItem>
            <StatusBarItem Content="Offline" />
            <!--<StatusBarItem Content="{Binding ElementName=MainTabControl, Path=SelectedItem.Header, Mode=OneWay}" />-->
        </StatusBar>


        <Grid x:Name="GridControls" 
              Grid.Column="2"
              Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="2" Margin="5">

                <Button Content="Channels"
                        Style="{DynamicResource AccentedSquareButtonStyle}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Command="{Binding NavCommand}"
                        CommandParameter="channels">
                    <Button.LayoutTransform>
                        <RotateTransform Angle="-90" />
                    </Button.LayoutTransform>
                </Button>

            </DockPanel>

            <DockPanel Grid.Row="1" Margin="5">

                <Button Content="Yupis"
                        Style="{DynamicResource AccentedSquareButtonStyle}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Command="{Binding NavCommand}"
                        CommandParameter="yupis">
                    <Button.LayoutTransform>
                        <RotateTransform Angle="-90" />
                    </Button.LayoutTransform>
                </Button>

            </DockPanel>

            <DockPanel Grid.Row="0" Margin="5">

                <Button Content="Members Info"
                        Style="{DynamicResource AccentedSquareButtonStyle}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Command="{Binding NavCommand}"
                        CommandParameter="videos">
                    <Button.LayoutTransform>
                        <RotateTransform Angle="-90" />
                    </Button.LayoutTransform>
                </Button>

            </DockPanel>
        </Grid>
               
              
        <Grid x:Name="GridDetails"
              Grid.Column="1"
              Grid.Row="0"
              Width="340"
              Height="600">
            <ContentControl Content="{Binding CurrentDetailsViewModel}"></ContentControl>
        </Grid>

        <Grid x:Name="GridDashboard"
              Grid.Column="0"
              Grid.Row="0">
            <ContentControl Content="{Binding CurrentDashboardViewModel}"></ContentControl>
        </Grid>

    </Grid>
</Controls:MetroWindow>
