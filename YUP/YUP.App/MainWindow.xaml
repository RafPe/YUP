<Controls:MetroWindow 
        x:Class="YUP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YUP.App"
        xmlns:videos="clr-namespace:YUP.App.Videos"
        xmlns:sidecontrols="clr-namespace:YUP.App.SideControls"
        xmlns:player="clr-namespace:YUP.App.Player"
        mc:Ignorable="d"
        Title="YUP - Youtube Universal Player"
        Width="1020"
        Height="720"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        ResizeMode="CanResize"
        GlowBrush="{DynamicResource AccentColorBrush}"
        WindowStartupLocation="CenterScreen"
        >
    <Grid x:Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StatusBar Grid.Row="1"
                   Grid.ColumnSpan="3"
                   >
            <StatusBarItem>YUP Connectivity mode</StatusBarItem>
            <Separator Style="{StaticResource MetroStatusBarSeparator}" />
            <StatusBarItem>Mode :</StatusBarItem>
            <StatusBarItem Content="Offline" />
            <!--<StatusBarItem Content="{Binding ElementName=MainTabControl, Path=SelectedItem.Header, Mode=OneWay}" />-->
        </StatusBar>


        <Grid x:Name="GridControls" 
              Grid.Column="2"
              Grid.Row="0">
            <sidecontrols:SideControlsView></sidecontrols:SideControlsView>
        </Grid>
               
              
        <Grid x:Name="GridDetails"
              Grid.Column="1"
              Grid.Row="0">
            <videos:VideosView></videos:VideosView>
        </Grid>

        <Grid x:Name="GridPlayer"
              Grid.Column="0"
              Grid.Row="0">
            <player:Player></player:Player>
        </Grid>

    </Grid>
</Controls:MetroWindow>
