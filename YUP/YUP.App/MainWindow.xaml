<Controls:MetroWindow x:Class="YUP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YUP.App"
        xmlns:views="clr-namespace:YUP.App.Views"
        mc:Ignorable="d"
        Title="YUP - Youtube Universal Player"
        Width="1020"
        Height="720"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        ResizeMode="CanResize"
        GlowBrush="{DynamicResource AccentColorBrush}"
        WindowStartupLocation="CenterScreen"
        >
    <Grid x:Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <DockPanel Grid.Column="2">
            <Button Content="Members Info" 
                          HorizontalContentAlignment="Stretch"
                          VerticalContentAlignment="Stretch">
                <Button.LayoutTransform>
                    <RotateTransform Angle="-90" />
                </Button.LayoutTransform>
            </Button>
            
        </DockPanel>
        
        
        <Grid x:Name="GridDetails"
              Grid.Column="1">
            <views:VideosView></views:VideosView>
        </Grid>

        <Grid x:Name="GridPlayer"
              Grid.Column="0">
        </Grid>

    </Grid>
</Controls:MetroWindow>
